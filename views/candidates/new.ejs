<div class="row justify-content-center">
  <div class="col-lg-8 col-xl-6 col-12">
    <form action="/signup/candidate" method="post" id="questionnaires" class="p-4">

      <!-- 1. What is your full name? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What is your full name?</div>
          <div class="row m-0">
            <div class="col-lg-6 px-0 pr-lg-2">
              <input type="text" name="firstname" placeholder="First name" autofocus>
            </div>
            <div class="col-lg-6 px-0 pl-lg-2">
              <input type="text" name="lastname" placeholder="Last name">
            </div>
          </div>
        </section>
      </div>

      <!-- 2. Which city do you live in? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">Which city do you live in?</div>
          <div>
            <input type="text" name="current_location" placeholder="...type here">
          </div>
        </section>
      </div>

      <!-- 3. Where do you want to work? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">In which city or cities do you want to work?</div>
          <div class="tag-container">
            <select multiple class="inputanswer" id="input_preferred_location" type="text" name="preferred_location"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
          <div class="ml-4 mt-4">
            <input type="checkbox" name="remote" class="form-check-input" id="remote" value="remote">
            <label for="remote" class="form-check-label">I can work remotely.</label>
          </div>
        </section>
      </div>

      <!-- 4. What is the job position you want to apply for? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What is the job position you want to apply for?</div>
          <div>
            <input type="text" name="preferred_position" placeholder="...type here">
          </div>
        </section>
      </div>

      <!-- 5. What type of contract are you looking for? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What type of contract are you looking for?</div>
          <div>
            <select name="job_type">
              <option value="Permanent">Permanent employment (full-time)</option>
              <option value="Internship">Internship (full-time)</option>
              <option value="Working-Student">Working student (part-time)</option>
              <option value="Flexible">Flexible</option>
            </select>
          </div>
        </section>
      </div>

      <!-- 6. What is your desired monthly salary? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What is your desired salary?</div>
          <div>
            <input type="text" name="salary" placeholder="...type here">
          </div>
        </section>
      </div>

      <!-- 7. What does your tech stack look like?  -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What does your tech stack look like?</div>
          <p class="sub_sentence">Please sort your technical skills by proficiency and separated by comma.</p>

          <label for="techstack3" class="sub_sub_sentence">Proficient:</label>
          <div class="tag-container">
            <select multiple class="inputanswer" id="techstack3" type="text" name="techstack3"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
          <label for="techstack2" class="sub_sub_sentence">Intermediate:</label>
          <div class="tag-container">
            <select multiple class="inputanswer" id="techstack2" type="text" name="techstack2"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
          <label for="techstack1" class="sub_sub_sentence">Beginner:</label>
          <div class="tag-container">
            <select multiple class="inputanswer" id="techstack1" type="text" name="techstack1"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
        </section>
      </div>

      <!-- 8. What are your soft skills? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What are your soft skills?</div>

          <div class="checkboxes">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="empathy" id="empathy" name="softskill_options">
              <label class="form-check-label" for="empathy">Empathy</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="teamwork" id="teamwork" name="softskill_options">
              <label class="form-check-label" for="teamwork">Teamwork</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="stress management skills" id="stress" name="softskill_options">
              <label class="form-check-label" for="stress">Stress management skills</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="problem solving skills" id="leadership"
                name="softskill_options">
              <label class="form-check-label" for="leadership">Problem solving skills</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="communication and interpersonal skills" id="communication"
                name="softskill_options">
              <label class="form-check-label" for="communication">Communication and interpersonal skills</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="leadership" id="leadership"
                name="softskill_options">
              <label class="form-check-label" for="leadership">Leadership</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="learning desire" id="learning"
                name="softskill_options">
              <label class="form-check-label" for="learning">Learning desire</label>
            </div>
          </div>

          <div class="tag-container">
            <select multiple class="inputanswer" id="input_softskill" name="soft_skills" placeholder="Add more..."
              data-role="tagsinput"></select>
          </div>
        </section>
      </div>

      <!-- 9. What is important to you when you work in a team regarding work culture? -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">What is important to you regarding work culture and benefits?</div>
          <p class="sub_sentence">Please sort your preferences by importance and separated by comma.</p>

          <label for="workculture3" class="sub_sub_sentence">Most important</label>
          <div class="tag-container">
            <select multiple class="inputanswer" id="workculture3" type="text" name="workculture3"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
          <label for="workculture2" class="sub_sub_sentence">Quite important</label>
          <div class="tag-container">
            <select multiple class="inputanswer" id="workculture2" type="text" name="workculture2"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
          <label for="workculture1" class="sub_sub_sentence">Somewhat important</label>
          <div class="tag-container">
            <select multiple class="inputanswer" id="workculture1" type="text" name="workculture1"
              placeholder="...type here" data-role="tagsinput"></select>
          </div>
        </section>
      </div>

      <!-- 10. About me section -->
      <div class="tab">
        <section class="questions">
          <div class="sentence">Write a short description about yourself. (optional)</div>
          <p class="sub_sentence">You can show off your previous work experience and let recruiters know something
            catchy about you!</p>
          <div>
            <textarea class="form-control" name="description" placeholder="...type here" rows="6"></textarea>
          </div>
        </section>
      </div>

      <div class="buttons">
        <button type="button" id="prevBtn" onclick="nextPrev(-1)" class="btn btn-outline-primary">« Previous</button>
        <button type="button" id="nextBtn" onclick="nextPrev(1)" class="btn btn-primary">Next »</button>
      </div>

      <!-- Circles which indicates the steps of the form: -->
      <div>
        <a onclick="nextPrev(0-currentTab)" class="step"></a>
        <a onclick="nextPrev(1-currentTab)" class="step"></a>
        <a onclick="nextPrev(2-currentTab)" class="step"></a>
        <a onclick="nextPrev(3-currentTab)" class="step"></a>
        <a onclick="nextPrev(4-currentTab)" class="step"></a>
        <a onclick="nextPrev(5-currentTab)" class="step"></a>
        <a onclick="nextPrev(6-currentTab)" class="step"></a>
        <a onclick="nextPrev(7-currentTab)" class="step"></a>
        <a onclick="nextPrev(8-currentTab)" class="step"></a>
        <a onclick="nextPrev(9-currentTab)" class="step"></a>
      </div>
    </form>
  </div>
</div>
<script src="/javascripts/questionnaires/questionnaire.js"></script>