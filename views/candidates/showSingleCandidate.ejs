<div class="container">
  <div class="main-body">
    <% if (user.candidateProfile && user.candidateProfile.equals(card._id)) { %>
      <hr>
      <h1 class="personal-info">Personal profile</h1>
      <% } else { %>
        <%- include('../partials/matches/nav.ejs') %>
          <% } %>

            <!-- copy this candidate id for testing because there are no matches for recruiters right now -->
            <%= card._id %>

              <div class="row gutters-sm">
                <!-- Left column -->
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">

                        <div class="mt-3">
                          <h1 class="h4">
                            <%= cardOwner.name %>
                          </h1>
                          <p class="text-secondary mb-1"> Full Stack Developer</p>
                          <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                          <% if (!user.candidateProfile || !user.candidateProfile.equals(card._id)) { %>
                            <%- include('../partials/matches/connect.ejs') %>
                              <% } %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                        <div class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                            viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                            stroke-linecap="round" stroke-linejoin="round"
                            class="feather feather-globe mr-2 icon-inline">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path
                              d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z">
                            </path>
                          </svg>Email</div>
                        <span class="text-secondary">
                          <%= cardOwner.email %>
                        </span>
                      </li>
                    </ul>
                  </div>
                  
                  <% if (user.candidateProfile && user.candidateProfile.equals(card._id)) { %>
                    <div class="profile-buttons justify-content-center">
                      <a href="<%=`/user/${user._id}/edit` %>">
                        <button class="btn btn-primary">Edit Personal Data</button>
                      </a>
                      <a href="<%=`/candidates/${user.candidateProfile._id}/edit` %>">
                        <button class="btn btn-primary">Edit Candidate Profile</button>
                      </a>
                    </div>
                    <% } %>
                </div>

                <!-- Right column -->
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-4 col-lg-3">
                          Preferred position
                        </div>
                        <div class="col-sm-8 col-lg-9 text-secondary">
                          <%=card.preferred_position%>
                        </div>
                        <hr>

                        <div class="col-sm-4 col-lg-3">
                          Desired salary
                        </div>
                        <div class="col-sm-8 col-lg-9 text-secondary">
                          <%=card.expected_salary%>
                        </div>
                        <hr>

                        <div class="col-sm-4 col-lg-3">
                          Employment type
                        </div>
                        <div class="col-sm-8 col-lg-9 text-secondary">
                          <%=card.job_type%>
                        </div>
                        <hr>

                        <div class="col-sm-4 col-lg-3">
                          Preferred location
                        </div>
                        <div class="col-sm-8 col-lg-9 text-secondary">
                          <!-- <%=card.preferred_location%> -->
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Berlin</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Hamburg</a>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-4 col-lg-3 my-auto">
                          Work culture
                        </div>
                        <div class="col-sm-8 col-lg-9 card-body">
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Fruits</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Drinks</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Home office</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Animal friendly</a>
                        </div>
                        <hr>

                        <div class="col-sm-4 col-lg-3 my-auto">
                          Tech stack
                        </div>
                        <div class="col-sm-8 col-lg-9 card-body">
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">HTML</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">JavaScript</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Sass</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Angular</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Vue</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">React</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">Redux</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">UI</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">UX</a>
                        </div>
                        <hr>

                        <div class="col-sm-4 col-lg-3 my-auto">
                          Soft skills
                        </div>
                        <div class="col-sm-8 col-lg-9 card-body">
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">creative</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">stress management</a>
                          <a href="#" class="badge badge-pill badge-primary mr-1 my-1">team work</a>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="row gutters-sm">
                    <div id="questionnaire">
                      <div class="card h-100">
                        <div class="card-body">
                          <div class="d-flex align-items-center mb-3 h5">About me</div>

                          <p><%=card.description%></p>

                          <!-- <div class="d-flex align-items-center mb-3 h5">Work experience</div>
                          <p>A good understanding of Linux development and automation tools (we use Ansible to manage
                            configuration, and you are expected to deploy your own application and features).</p> -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- End right column -->
              </div>
  </div>
</div>