<div class="container-fluid h-100">
  <div class="row justify-content-center align-items-center"></div>
  <div class="main-body">
    <hr>
    <h1>Edit this job offer:</h1>    
  </div>
 
  <div class="row justify-content-center h-100">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
      <form action="">
        <div class="form-group">
          <label for="jobTitle">Job title</label>
          <input type="text" class="form-control is-disabled" id="jobTitle" placeholder= "..." value="<%= job.job_title %>"/>
        </div>
        <div class="form-group">
          <label for="jobLocation">Location</label>
          <input type="text" class="form-control is-disabled" id="jobLocation" placeholder= "..." value="<%= job.location %>" />
        </div>
        <div class="form-group">
          <label for="salary">Salary</label>
          <input type="text" class="form-control is-disabled" id="salary" placeholder= "..." value="<%= job.salary %>"/>
        </div>
        <div class="form-group">
          <label for="techstack">Tech stack</label>
          <input type="text" class="form-control is-disabled" id="techstack" placeholder= "..." value=""/>
        </div>
        <div class="form-group">
          <label for="workculture">Work culture</label>
          <input type="text" class="form-control is-disabled" id="workculture" placeholder= "..." value=""/>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control is-disabled" id="description" rows="3"> <%= job.description %> </textarea>
        </div>

        <div class="form-group">
          <div class="container">
            <div class="row">
              <a href="/jobs/<%= card.jobId %>/delete" class="btn btn">Delete</a> 
              <div class="col"><button class="col-6 btn btn-outline-primary btn-sm float-center">Delete</button></div>
              <div class="col"><button type="submit" class="col-6 btn btn-outline-primary btn-sm float-center">Update</button></div>
              
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>