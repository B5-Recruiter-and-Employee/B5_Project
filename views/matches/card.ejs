<div class="col">
  <div class="card border-success mb-3 m-0 p-0" style="max-width: 75%">
    <div class="card-header bg-transparent border-success"></div>
    <div class="card-body text-success">
      <h5 class="card-title"><%= title %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= description %></h6>
      <p class="card-text"><%= description_text %></p>
      <!-- HARDCODED for jobs and doesn't work with candidates yet -->
      <% if (user.candidateProfile && user.candidateProfile.equals(id)) { %>
      <a href="/jobs/<%= id %>" class="btn btn-primary">More...</a>
      <% } else { %>
      <a href="/candidates/<%= id %>" class="btn btn-primary">More...</a>
      <% } %>

    </div>
    <div class="card-footer bg-transparent border-success"></div>
  </div>
</div>
